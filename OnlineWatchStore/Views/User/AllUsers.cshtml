@model OnlineWatchStore.ViewModels.UserVM

@{
    ViewData["Title"] = "AllUsers";
}
<link href="~/admintemplate/assets/css/bootstrap.min.css" rel="stylesheet" />
@Html.Raw(TempData["Success"])
<form action="AddNewUser" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Name</label>
                    <input type="text" asp-for=UserItem.Name class="form-control" placeholder="Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Phone</label>
                    <input type="number" asp-for=UserItem.Phone class="form-control" placeholder="+9233">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="text" asp-for=UserItem.Email class="form-control" placeholder="exmple.com">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Address</label>
                    <input type="text" asp-for=UserItem.Address class="form-control" placeholder="123,bannu">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <label for="inputAddress">UserName</label>
                    <input asp-for=UserItem.Username type="text" class="form-control" placeholder="abc123" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mt-3">
                    <label for="inputAddress">Password</label>
                    <input asp-for=UserItem.Password type="text" class="form-control" placeholder="*****"/>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary form-cont mt-3">Add User</button>
                </div>
            </div>
        </div>
    </div>
</form>

<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Sr.</th>
            <th>Name</th>
            <th>UserName</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @if (Model.UserList != null)
        {
            @foreach (var item in Model.UserList)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@item.Name</td>
                    <td>@item.Username</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info" style="padding:18px;" asp-route-id="@item.UserId">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" style="padding:18px;" asp-route-id="@item.UserId">Delete</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
