@model OnlineWatchStore.ViewModels.ProductVM
@{
    ViewData["Title"] = "Edit";
}
<link href="~/admintemplate/assets/css/bootstrap.min.css" rel="stylesheet" />
<h1>Edit Product</h1>
<br />
<form action="Edit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-row">
                <input asp-for="ProductItem.ProductId" hidden/>
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Name</label>
                    <input type="text" asp-for=ProductItem.Name class="form-control" placeholder="Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Price</label>
                    <input type="text" asp-for=ProductItem.Price class="form-control" placeholder="000.0">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    @Html.DropDownListFor(model=>model.ProductItem.BrandName,new SelectList(ViewBag.Brands,"BrandName","BrandName"),"Select Brand",new {@class="form-control"})
                </div>
                <div class="col-md-6">
                    @Html.DropDownListFor(model=>model.ProductItem.CategoryName,new SelectList(ViewBag.Categories,"CategoryName","CategoryName"),"Select Category",new {@class="form-control"})
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label for="inputAddress">Description</label>
                    <input type="text" asp-for=ProductItem.Description class="form-control" placeholder="1234 Main St">
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <label for="inputAddress">Quantity</label>
                    <input type="number" asp-for=StockItem.QuantityAvailable class="form-control" placeholder="123">
                </div>

            </div>
        </div>
        <div class="col-md-6" style="border-left:1px solid;">
            <div class="row">
                <div class="col-md-12">
                    <label for="inputAddress">Image</label>
                    <input asp-for=ImagePath type="file" class="form-control" />
                    <img src="~/images/@Model?.ProductItem?.Image" alt="Image Preview" class="mt-2" style="max-width: 40%;" />
                </div>

            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary form-cont mt-3">Update Product</button>
                </div>
            </div>
        </div>
    </div>
</form>
<br />
<a  asp-action="AllProducts" class="btn btn-primary">Back To List</a>


